{% extends 'base.html.twig' %}

{% block body %}

    <h1>Inscription</h1>

    {{ form_start(form) }}
    {{ form_row(form.username, {'label' : 'Nom d\'utilisateur', 'attr': {'placeholder': "Ton nom"}}) }}
    {{ form_row(form.email, {'attr': {'placeholder': "Ton email"}}) }}
    {{ form_row(form.password, {'label' : 'Mot de passe', 'attr': {'placeholder': "Ton mot de passe"}}) }}
    {{ form_row(form.confirm_password, {'label' : 'Confirmation du mot de passe', 'attr': {'placeholder': "Retape ton mot de passe"}}) }}

        <button type="submit" class="btn btn-success">Inscription</button>

    {{ form_end(form) }}


{% endblock %}